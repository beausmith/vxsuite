#!/usr/bin/env node

// @ts-check

require('esbuild-runner/register');

require('./src/validate-monorepo')
  .main({
    stdin: process.stdin,
    stdout: process.stdout,
    stderr: process.stderr,
  })
  .catch((error) => {
    console.error(error.stack);
    return 1;
  })
  .then((exitCode) => {
    process.exitCode = exitCode;
  });
