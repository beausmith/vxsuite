{
  "compilerOptions": {
    // Based on the current version of NodeJS for any backend services and
    // Electron/NodeJS for frontends.
    "target": "ES2021",

    // Enable all strict mode checks
    "strict": true,

    // Compile modules independently for non-`tsc` tooling
    "isolatedModules": true,

    // Don't allow both e.g. "foo.ts" and "Foo.ts" for the same file.
    "forceConsistentCasingInFileNames": true,

    // Require `[…]` and not dots for accessing index properties.
    "noPropertyAccessFromIndexSignature": true,

    // Treat `[…]` property accesses as potentially undefined.
    "noUncheckedIndexedAccess": true,
  }
}
