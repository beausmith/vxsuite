{
  "name": "module-scan",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "build": "tsc",
    "format": "prettier '**/*.+(css|graphql|json|less|md|mdx|sass|scss|yaml|yml)' --write",
    "lint": "tsc --noEmit && eslint '*/**/*.{js,jsx,ts,tsx}' --quiet",
    "start": "ts-node --files ./src/index.ts",
    "test": "jest",
    "test:coverage": "jest --coverage",
    "test:debug": "node --inspect-brk $(which jest) --runInBand --no-cache",
    "test:watch": "jest --watch",
    "watch": "tsc -w"
  },
  "husky": {
    "hooks": {
      "pre-commit": "tsc && lint-staged"
    }
  },
  "lint-staged": {
    "*.+(css|graphql|json|less|md|mdx|sass|scss|yaml|yml)": [
      "prettier --write"
    ],
    "*.+(js|jsx|ts|tsx)": [
      "eslint --quiet --fix"
    ],
    "package.json": [
      "sort-package-json"
    ]
  },
  "dependencies": {
    "@votingworks/ballot-encoder": "workspace:*",
    "@votingworks/hmpb-interpreter": "workspace:*",
    "@votingworks/qrdetect": "^1.0.1",
    "base64-js": "^1.5.1",
    "body-parser": "^1.19.0",
    "busboy": "^0.3.1",
    "canvas": "^2.6.1",
    "debug": "^4.3.1",
    "deep-eql": "^4.0.0",
    "express": "^4.17.1",
    "fs-extra": "^9.0.1",
    "jest-diff": "^26.6.2",
    "jsqr": "^1.3.1",
    "memory-streams": "^0.1.3",
    "multer": "^1.4.2",
    "node-quirc": "^2.3.0",
    "ora": "^5.2.0",
    "pdfjs-dist": "2.3.200",
    "sqlite3": "^5.0.1",
    "tmp": "^0.2.1",
    "uuid": "^8.3.2",
    "zip-stream": "^4.0.4"
  },
  "devDependencies": {
    "@types/base64-js": "^1.3.0",
    "@types/body-parser": "^1.19.0",
    "@types/busboy": "^0.2.3",
    "@types/debug": "^4.1.5",
    "@types/express": "^4.16.1",
    "@types/fs-extra": "^9.0.6",
    "@types/jest": "^26.0.6",
    "@types/multer": "^1.4.3",
    "@types/node": "^12.0.0",
    "@types/pdfjs-dist": "^2.1.3",
    "@types/readable-stream": "^2.3.9",
    "@types/sqlite3": "^3.1.6",
    "@types/supertest": "^2.0.10",
    "@types/tmp": "^0.2.0",
    "@types/uuid": "^8.3.0",
    "@types/yauzl": "^2.9.1",
    "@typescript-eslint/eslint-plugin": "^4.13.0",
    "@typescript-eslint/parser": "^4.13.0",
    "chalk": "^4.1.0",
    "eslint": "^7.17.0",
    "eslint-config-prettier": "^7.1.0",
    "eslint-import-resolver-node": "^0.3.4",
    "eslint-plugin-cypress": "^2.11.2",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jest": "^24.1.3",
    "eslint-plugin-no-array-sort-mutation": "workspace:*",
    "eslint-plugin-prettier": "^3.3.1",
    "husky": "^4.3.7",
    "jest": "^26.6.3",
    "lint-staged": "^10.5.3",
    "prettier": "^2.2.1",
    "sort-package-json": "^1.48.1",
    "supertest": "^6.0.1",
    "ts-jest": "^26.4.4",
    "ts-node": "^9.1.1",
    "typescript": "4.0.5",
    "yauzl": "^2.10.0",
    "zod": "^1.11.11"
  },
  "engines": {
    "node": ">= 12"
  }
}
